    <button id="cart" class="homebtn"><a href="/cart">Cart</a></button>
    <button id="minigame" class="homebtn"><a href="/minigame">Play</a></button>
    <button id="logout" class="homebtn"><a href="/logout">Logout</a></button>
</div></div>

</div>
